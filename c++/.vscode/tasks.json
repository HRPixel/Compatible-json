{
    "tasks": [
        {
            "type": "cppbuild", // 任务类型
            "label": "C/C++: gcc.exe 生成活动文件", // 任务标签
            "command": "D:/msys64/ucrt64/bin/gcc.exe", // 编译器路径
            "args": [ // 编译参数
                "-fdiagnostics-color=always", // 启用彩色诊断信息
                "-g", // 生成调试信息
                "${file}", // 编译当前打开的文件
                // "${workspaceFolder}/src/*.cpp",  // 编译 src 目录下的所有 .cpp 文件
                "-I",
                "${workspaceFolder}/include", // 包含头文件目录
                "-o",
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe", // 输出可执行文件路径
                "-lstdc++" // 手动链接 C++ 标准库
            ],
            "options": { // 任务选项
                "cwd": "D:/msys64/ucrt64/bin" // 任务工作目录
            },
            "problemMatcher": [
                "$gcc" // 使用 gcc 问题匹配器
            ],
            "group": { // 任务分组
                "kind": "build", // 构建任务
                "isDefault": true // 设置为默认构建任务
            },
            "detail": "调试器生成的任务。" // 任务详情
        }
    ],
    "version": "2.0.0" // 任务版本
}