{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0", // 配置版本
    "configurations": [
        {
            "name": "(gdb) 启动", // 配置名称
            "type": "cppdbg", // 配置类型
            "request": "launch", // 请求类型
            // "program": "${workspaceFolder}\\src\\*.exe",        // 可执行文件路径
            "program": "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe", // 可执行文件路径
            "args": [], // 程序参数
            "stopAtEntry": false, // 是否在程序入口处暂停
            // "cwd": "${fileDirname}",    // 工作目录
            // "cwd": "${workspaceFolder}", // 工作目录
            "cwd": "D:\\msys64\\ucrt64\\bin", // 工作目录
            "environment": [], // 环境变量
            "externalConsole": true, // 是否使用外部终端
            "MIMode": "gdb", // 调试器模式
            "miDebuggerPath": "D:\\msys64\\ucrt64\\bin\\gdb.exe", // gdb 路径
            "setupCommands": [ // 调试器启动时执行的命令
                {
                    "description": "为 gdb 启用整齐打印", // 命令描述
                    "text": "-enable-pretty-printing", // 命令文本
                    "ignoreFailures": true // 忽略失败
                },
                {
                    "description": "将反汇编风格设置为 Intel", // 命令描述
                    "text": "-gdb-set disassembly-flavor intel", // 命令文本
                    "ignoreFailures": true // 忽略失败
                }
            ],
            "preLaunchTask": "C/C++: gcc.exe 生成活动文件" // 指定在调试之前运行的任务
        }
    ]
}